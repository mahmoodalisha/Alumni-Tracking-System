{
  "builds": [
    {
      "src": "server/index.js",  
      "use": "@vercel/node"
    },
    {
      "src": "client/build/**",  
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",             
      "dest": "/client/build/index.html"
    }
  ]
}
